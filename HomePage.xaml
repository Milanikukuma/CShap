<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EzCheckme.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome User!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button Text="CheckIn"
                    Clicked="OnCheckInButtonClicked"
                    BackgroundColor="#2ecc71"
                    TextColor="White"/>
       
        <Button Text="History"
                
            Clicked="OnHistoryButtonClicked"
            BackgroundColor="red"
            TextColor="White"/>

        <Button Text="Messages"
        
    Clicked="OnMessagesButtonClicked"
    BackgroundColor="blue"
    TextColor="White"/>
    </VerticalStackLayout>
    
    
</ContentPage>